{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "arraysInArrays": [
      "error",
      "always",
      {
        "arraysInArrays": false
      }
    ],
    "completed-docs": true,
    "jsx-curly-spacing": "always",
    "jsx-equals-spacing": "always",
    "jsx-self-close": "always",
    "jsx-wrap-multiline": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}|<path (.*?)"
      }
    ],
    "no-console": false,
    "objectsInArrays": [
      "error",
      "always",
      {
        "arraysInArrays": false
      }
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "space-within-parens": [
      true,
      "always"
    ],
    "variable-name": [
      true,
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
